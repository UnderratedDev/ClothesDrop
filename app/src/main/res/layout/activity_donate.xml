<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/splash_background"
    tools:context="nestedternary.project.Donate">

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us how many bags you donated at"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="30dp" />

    <TextView
        android:id="@+id/bin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="167dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/donate_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:inputType="number"
            android:textAlignment="center"
            android:background="@color/colorWhite"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="202dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <ImageButton
            android:id="@+id/qty_submit_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:scaleType="fitEnd"
            android:layout_gravity="center_horizontal"
            android:onClick="submtiQty"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="257dp"
            android:src="@drawable/button_submit"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"/>
    </LinearLayout>



</LinearLayout>
