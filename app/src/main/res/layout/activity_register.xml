<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/splash_background">

    <EditText
        android:id="@+id/txt_register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail Address"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textAlignment="center"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txt_register_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone Number (Optional)"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/txt_register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textAlignment="center"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txt_register_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textAlignment="center"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/txt_terms_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Terms and conditions go here. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec vitae viverra purus, in sagittis massa. Praesent fermentum et sem quis vestibulum. Aenean id eros et tortor sollicitudin auctor. Aliquam et enim a augue bibendum pulvinar. Nulla quam dolor, scelerisque nec convallis a, posuere sed turpis. Aenean in nisl dolor. Vivamus venenatis a lorem ac vulputate. Donec feugiat lobortis finibus. Nullam faucibus ipsum vel finibus maximus. Nunc accumsan venenatis leo, eget iaculis massa gravida non." />

    <CheckBox
        android:id="@+id/checkBox_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I accept these terms and conditions"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button_register_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Register"
        android:enabled="false"
        android:onClick="registerButton"/>


</LinearLayout>
